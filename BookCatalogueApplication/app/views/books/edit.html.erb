<h1>Edit books</h1>
<center>
<%= form_for :book do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :genre %><br />
    <%= f.text_field :genre %><br />
  </p>
  <p>
    <%= f.label :classification %><br />
    <%= f.text_field :classification %>
  </p>
  <p>
    <%= f.label :types %><br />
    <%= f.text_field :types %>
  </p>
  <p>
    <%= f.label :year %><br />
    <%= f.text_field :year %>
  </p>
  <p>
    <%= f.submit "Update book" %>
    <% end %>
  </p>
</center>

<center>
  <%= link_to("Back", :back) %>
</center>